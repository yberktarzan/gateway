# ===========================================
# Laravel Gateway - Environment Variables
# ===========================================

# Laravel Application
APP_NAME="Laravel Gateway"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=UTC

# Maintenance & CLI
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

# Security
BCRYPT_ROUNDS=12

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gateway
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting & Storage
BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local

# Queue Configuration
QUEUE_CONNECTION=redis

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=gateway_cache

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail Configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# AWS Services (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Frontend
VITE_APP_NAME="${APP_NAME}"

# ===========================================
# Docker & Infrastructure
# ===========================================

# Project / Compose
COMPOSE_PROJECT_NAME=laravel-gateway
MESH_NETWORK=mesh
TZ=Europe/Istanbul

# UID/GID (Linux compatibility)
USER_ID=1000
GROUP_ID=1000

# Local HTTP (artisan serve)
LOCAL_HTTP_PORT=8000
CONTAINER_HTTP_PORT=8000

# Prod HTTP (nginx)
PROD_HTTP_PORT=8080

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_AOF=yes

# ===========================================
# Microservices Configuration
# ===========================================

# Example microservice URLs (uncomment when needed)
# USER_SERVICE_URL=http://user-service:8001
# ORDER_SERVICE_URL=http://order-service:8002
# NOTIFICATION_SERVICE_URL=http://notification-service:8003
# PAYMENT_SERVICE_URL=http://payment-service:8004
