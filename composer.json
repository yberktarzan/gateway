{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "yberktarzan/gateway",
    "type": "project",
    "description": "API Gateway application built with Laravel framework.",
    "keywords": [
        "laravel",
        "api",
        "gateway",
        "microservices"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan optimize:clear --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "php artisan serve"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "pint": [
            "./vendor/bin/pint"
        ],
        "pint-test": [
            "./vendor/bin/pint --test"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "quality": [
            "@pint-test",
            "@phpstan"
        ],
        "quality-fix": [
            "@pint",
            "@phpstan"
        ],
        "commit-help": [
            "echo 'Semantic Commit Examples:'",
            "echo '  feat(auth): add login endpoint'",
            "echo '  fix: resolve memory leak in parser'",
            "echo '  docs(api): update authentication guide'",
            "echo '  style: format code with prettier'",
            "echo '  refactor(user): simplify validation logic'",
            "echo ''",
            "echo 'Available types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert'"
        ],
        "install-hooks": [
            "./scripts/install-hooks.sh"
        ],
        "setup": [
            "@install-hooks",
            "echo 'ðŸŽ‰ Project setup complete! Ready to develop.'"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
